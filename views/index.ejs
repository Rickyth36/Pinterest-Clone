<%- include('partials/header') %>

<div class="w-full h-screen bg-center bg-cover">
  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[25vw] bg-white px-10 py-10 rounded-[30px]">
      <h1 class="text-3xl tracking-tighter text-center font-semibold text-zinc-700 leading-none">Welcome to Pinterest</h1>
      <form action="/login" method="post">
        <input class="border-2 border-zinc-300 mt-3 rounded-md block w-full px-3 py-2" type="text" name="username" placeholder="Username">
        <input class="border-2 border-zinc-300 mt-3 rounded-md block w-full px-3 py-2" type="password" name="password" placeholder="Password">
        <a href="#" class="mt-2 font-semibold text-zinc-700 inline-block">Forgot password?</a>
        <input class="rounded-full border-2 border-zinc-300 mt-3 rounded-md block w-full px-3 py-2 bg-red-600 text-white" type="submit" value="Login">
        <p class="text-xs font-semibold text-zinc-700 mt-7 text-center w-3/4 mx-auto">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
        <a href="/register" class="text-sm inline-block mt-7 font-semibold text-zinc-700 text-center w-full">Don't have an account?</a>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
